@model HaushaltsbuchAddViewModel
@addTagHelper *, Haushaltsbuch.UI.Web
@{
    ViewData[index: "Title"] = "Add";
}

<h1>Neues Haushaltsbuch anlegen</h1>

<form asp-action="Save">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="name">Name</label>
            @Html.TextBoxFor(expression: m => m.Name, htmlAttributes: new
            {
                @class = "form-control",
                id = "name",
                aria_describedby = "nameHelp",
                placeholder = "Name eingeben"
            })
            <small id="nameHelp" class="form-text text-muted">Name des Haushaltsbuches</small>
        </div>

        <div class="form-group col-md-6">
            <label for="währung">Währung</label>
            @Html.DropDownListFor(expression: m => m.NeueWährung, selectList: Model.WährungenItems, htmlAttributes: new
            {
                @class = "form-control",
                id = "währung"
            })
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Erstellen</button>
    <a class="btn btn-outline-dark" href="@Url.Action(action: "Index", controller: "Home")">Zurück</a>
</form>